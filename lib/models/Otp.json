{
  "name": "Otp",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "emailIdentity": {
      "type": "string"
    },
    "phoneIdentity": {
      "countryCode": {
        "type": "string"
      },
      "phone": {
        "type": "string"
      }
    },
    "identity": {
      "type": "string"
    },
    "secret": {
      "type": "string"
    },
    "attempt": {
      "lastAttempt": {
        "type": "date",
        "default": "$now"
      },
      "attempts": {
        "type": "number"
      }
    }
  },
  "validations": [],
  "acls": [
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW"
    }
  ],
  "relations": {
    "user": {
      "type": "belongsTo",
      "model": "User",
      "foreignKey": "userId"
    }
  },
  "methods": {}
}
